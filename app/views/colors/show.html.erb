<% provide(:title, @color.name)%>
<div class="h-[calc(100%-88px)] bg-slate-600 text-slate-200 p-4">
  <h1 class="text-5xl font-bold text-white text-center"><%= @color.name %></h1>
  <%= render 'shared/success_flash'%>
  <div class="flex flex-col items-center justify-center bg-slate-700 rounded-md p-6 w-fit m-auto mt-6">
    <div class="flex flex-col gap-4">
      <div class="flex gap-6">
        <div class="h-48 w-48 rounded-md" style="background-color: #<%= @color.hex %>"></div>
        <div class="flex flex-col w-48 break-words">
          <p class="font-bold text-xl">Description:</p>
          <p><%= @color.description %></p>
        </div>
      </div>
      <h1 class="font-bold m-auto text-2xl">Color Codes</h1>
      <div class="grid grid-cols-2 justify-items-center text-xl">
        <p class="font-bold">HEX: <span class="font-medium">#<%= @color.hex %></span></p>
        <p class="font-bold">RGB: <span class="font-medium">(<%= @color.rgb %>)</span></p>
        <p class="font-bold col-span-2">HSL: <span class="font-medium">(<%= @color.hsl %>)</span></p>
      </div>
    </div>
    <div class="mt-6">
      <%= link_to "Edit Color", edit_color_path, class: "bg-slate-300 text-slate-800 text-lg rounded-md px-4 py-2 mr-2 font-medium cursor-pointer hover:ring-2 ring-slate-400" %>
      <%= link_to "Delete Color", @color, method: :delete, data: { confirm: "Are you sure you want to delete this color?" }, class: "bg-slate-300 text-slate-800 text-lg rounded-md px-4 py-2 font-medium cursor-pointer hover:ring-2 ring-slate-400" %>
    </div>
  </div>
</div>
