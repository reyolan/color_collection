<% if @color.errors.any? %>
  <div class="bg-slate-700 flex w-fit rounded border-2 border-red-400 m-auto mt-6">
    <div class="w-16 bg-red-400 text-xl flex justify-center items-center p-6">
      <div class="border-2 rounded-full p-4 h-12 w-12 flex justify-center items-center border-slate-300 text-slate-300">X</div>
    </div>
    <div class="p-2 text-slate-300">
      <p class="font-medium text-lg">There <%= format_auxiliary_verb(@color.errors.count) %> <%= pluralize(@color.errors.count, "error").upcase%> in your submission. </p>
      <ul class="list-disc list-inside">
        <% @color.errors.full_messages.each do |message| %>
          <li> <%= message %>. </li>
        <%end%>
      </ul>
    </div>
  </div>
<% end %>
